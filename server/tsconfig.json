{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "outDir": "./build",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "incremental": true,
        "strictNullChecks": true,
        "lib": [
            "es2016",
            "es5"
        ],
        "types": ["node", "express", "dotenv"],
        "paths": {
            "@server/*": ["./src/server/*"],
            "@apps/*": ["./src/apps/*"],
            "@utils/*": ["./src/utils/*"],
            "@modules/*": ["./src/modules/*"],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}
